{
  "name": "rakuten-test",
  "version": "1.0.0",
  "description": "Rakuten test",
  "main": "index.js",
  "scripts": {
    "test": "jest --watchAll",
    "test:no-watch": "jest",
    "start": "webpack-dev-server",
    "build": "webpack --mode production",
    "coverage": "jest --coverage",
    "lint": "eslint ."
  },
  "repository": {
    "type": "git",
    "url": "https://www.github.com/gianpieroc/rakuten-test.git"
  },
  "keywords": [
    "react",
    "jest",
    "react-testing-library",
    "webpack"
  ],
  "author": "Gianpiero Costanza",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/gianpieroc/rakuten-test/issues"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "pre-push": "npm run coverage"
    }
  },
  "jest": {
    "testURL": "http://localhost",
    "coverageReporters": [
      "text",
      "html"
    ],
    "coveragePathIgnorePatterns": [
      "/src/testUtils",
      "/src/globalStyles"
    ],
    "coverageThreshold": {
      "branches": 70,
      "functions": 70,
      "lines": 70,
      "statements": 70
    }
  },
  "homepage": "https://github.com/gianpieroc/rakuten-test#readme",
  "devDependencies": {
    "@babel/core": "7.10.1",
    "@babel/plugin-proposal-class-properties": "7.10.1",
    "@babel/plugin-transform-runtime": "7.10.1",
    "@babel/preset-env": "7.10.1",
    "@babel/preset-react": "7.10.1",
    "@testing-library/jest-dom": "5.9.0",
    "@testing-library/react": "10.0.4",
    "@typescript-eslint/parser": "^3.0.2",
    "babel-eslint": "10.1.0",
    "babel-loader": "8.1.0",
    "babel-plugin-styled-components": "^1.10.7",
    "eslint": "7.1.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-config-react-app": "^5.2.1",
    "eslint-plugin-flowtype": "^5.1.3",
    "eslint-plugin-import": "2.20.2",
    "eslint-plugin-jsx-a11y": "6.2.3",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.20.0",
    "eslint-plugin-react-hooks": "^4.0.4",
    "html-webpack-plugin": "4.3.0",
    "husky": "4.2.5",
    "jest": "26.0.1",
    "prettier": "2.0.5",
    "redux-mock-store": "1.5.4",
    "webpack": "4.43.0",
    "webpack-cli": "3.3.11",
    "webpack-dev-server": "3.11.0"
  },
  "dependencies": {
    "history": "4.10.1",
    "prop-types": "^15.7.2",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "react-player": "^2.2.0",
    "react-redux": "7.2.0",
    "react-router-dom": "5.2.0",
    "redux": "4.0.5",
    "redux-logger": "^3.0.6",
    "redux-saga": "1.1.3",
    "styled-components": "5.1.1"
  }
}
